<div class= "container">
  <h1>General Shopping List</h1>
  <div class="d-flex justify-content-between">
      <p>Amount of food items to buy: <strong><%=@recipe_foods.count%></strong></p>
      <p>Total value of food needed: <strong><%= number_to_currency(@recipe_foods.sum(&:total_value)) %></strong></p>
    </div>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= link_to food.name, food_path(food) %></td>
            <td><%= food.quantity %> <%= food.measurement_unit %></td>
            <td><%=number_to_currency(@recipe_foods.sum(&:total_value)) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
